<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/colorAccent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" ADMIN "
        android:textSize="35dp"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimaryDark"
        android:fontFamily="robotica"
        android:textStyle="bold">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Name : "
        android:textSize="25dp"
        android:fontFamily="robotica"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="250dp"></TextView>
    <EditText
        android:layout_width="200dp"
        android:id="@+id/admin_username"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="175dp"></EditText>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password : "
        android:textSize="25dp"
        android:fontFamily="robotica"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="350dp"></TextView>
    <EditText
        android:layout_width="200dp"
        android:id="@+id/admin_password"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="175dp"
        android:inputType="textPassword">
    </EditText>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/admin_login"
        android:text="LogIn"
        android:background="@drawable/roundedbutton"
        android:textColor="#ffffff"
        android:textSize="15dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="450dp"></Button>



</RelativeLayout>
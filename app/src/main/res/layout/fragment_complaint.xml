<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/colorAccent">
   <TextView

       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Name :"
       android:textSize="25dp"
       android:fontFamily="robotica"
       android:layout_marginLeft="20dp"
       android:textStyle="bold"
       android:textColor="@color/colorPrimaryDark"
       android:layout_marginTop="85dp">
   </TextView>

    <EditText
        android:id="@+id/complaint_name"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="85dp"
        android:textAlignment="center"
        android:textSize="25dp"></EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="175dp"
        android:fontFamily="robotica"
        android:text="Phone :"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="25dp"
        android:textStyle="bold"></TextView>

    <EditText
        android:id="@+id/complaint_phone"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="175dp"
        android:textAlignment="center"
        android:textSize="25dp">

    </EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="290dp"
        android:fontFamily="robotica"
        android:text="Write your Complaint Here :"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="25dp"
        android:textStyle="bold"></TextView>

    <EditText
        android:id="@+id/complaint_main"
        android:layout_width="375dp"
        android:layout_height="149dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="341dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/textbox"
        android:ems="10"
        android:padding="4dp"
        android:gravity="start|top"
        android:inputType="textMultiLine"></EditText>

    <Button
        android:id="@+id/complaint_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="550dp"
        android:background="@drawable/roundedbutton"
        android:text="Submit"
        android:textColor="#ffffff"
        android:textSize="15dp">

    </Button>


</RelativeLayout>